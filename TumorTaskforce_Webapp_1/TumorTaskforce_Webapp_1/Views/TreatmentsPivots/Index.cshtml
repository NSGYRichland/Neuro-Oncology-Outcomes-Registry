@model IEnumerable<TumorTaskforce_Webapp_1.TreatmentsPivot>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>All Treatments Relations</h1>
    <p class="lead"></p>
</div>

@if (User.Identity.IsAuthenticated)
{
    if (ViewBag.displayMenu == "Yes")
    {

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>

        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.frequency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.notes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient.patientID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PossibleTreatment.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.effectiveness)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.frequency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.patientID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PossibleTreatment.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.effectiveness)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>

    }
    else
    {
        <h2>  Unauthorized. </h2>
        <h3>
            You need to be an administrator to access this page.
        </h3>
    }
}
else
{
    <h2>  Unauthorized. </h2>
    <h3>
        Please log in or register to access this page.
    </h3>
}

