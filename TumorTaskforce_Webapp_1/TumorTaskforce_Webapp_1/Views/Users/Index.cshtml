@model IEnumerable<TumorTaskforce_Webapp_1.Models.UserViewModel>

@{
    ViewBag.Title = "Manage Users";
}

<div class="jumbotron">
    <h1>Tumor App - Manage</h1>
    <p class="lead">Use the links below to manage Users and Roles</p>
</div>

@if (User.Identity.IsAuthenticated)
{
    if (ViewBag.displayMenu == "Yes")
    {
        <div class="row">
            <div class="col-md-6">
                <h2>Manage Users</h2>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <tr>
                    <th>
                        UserName
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Role
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Role
                        </td>
                        <td>
                            @if (item.Id.Equals(ViewBag.currentUserID) || item.UserName.Equals("c.burdell"))
                            {
                            }
                            else
                            {
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </p>
                        
                            }
                    
                        </td>
                    </tr>
                }

            </table>
        </div>

    }
    else
    {
        <h2>  Unauthorized. </h2>
        <h3>
            You need to be an administrator to access this page.
        </h3>
    }
}
else
{
    <h2>  Unauthorized. </h2>
    <h3>
        Please log in or register to access this page.
    </h3>
}





