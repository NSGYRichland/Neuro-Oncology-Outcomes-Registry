@model IEnumerable<TumorTaskforce_Webapp_1.PossibleTreatment>

@{
    ViewBag.Title = "All Treatments";
}

<h2>All Treatments</h2>

<p>
    @Html.ActionLink("Create New Treatment", "Create") -
    Or create it from the @Html.ActionLink("Create Patient", "Create", "Patients") page!
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
